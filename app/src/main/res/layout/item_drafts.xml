<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/draftNameTV"
        style="@style/TextStyle.Based"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/draftAmountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/draftAmountTextView"
        style="@style/TextStyle.Based"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="200 шт."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/draftPriceTV"
        style="@style/TextStyle.Based"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/draftDiscountTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/draftNameTV" />

    <TextView
        android:id="@+id/draftDiscountTV"
        style="@style/TextStyle.Based"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/draftBarcodeTV"

        app:layout_constraintTop_toBottomOf="@+id/draftNameTV" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="italic"
        android:id="@+id/draftBarcodeTV"
        style="@style/TextStyle.Based"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/draftAmountTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>