<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Название товара"
        android:textColor="@color/black"
        android:textSize="@dimen/halfExtraLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/amountTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Название "
        android:textColor="@color/black"
        android:textSize="@dimen/medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toStartOf="@+id/deleteIV"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteIV"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:background="@drawable/cross_mark_svgrepo_com"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        android:text="Название товара"
        android:textColor="@color/black"
        android:textSize="@dimen/medium"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large"
        android:gravity="end"
        android:padding="4dp"
        android:text="Название товара"
        android:textColor="@color/black"
        android:textSize="@dimen/medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/amountTV"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@id/name" />
    " />

</androidx.constraintlayout.widget.ConstraintLayout>